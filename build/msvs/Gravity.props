<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros">

	<GravityRoot>$(GRAVITY_HOME)</GravityRoot>

    <BinDir>$(GravityRoot)\$(Platform)\$(Configuration)\bin\</BinDir>
	<LibDir>$(GravityRoot)\$(Platform)\$(Configuration)\lib\</LibDir>

	<GravityIncludeDir>$(GravityRoot)\$(Platform)\$(Configuration)\include\</GravityIncludeDir>
	<GravityDepsDir>$(GravityRoot)\$(Platform)\$(Configuration)\deps\</GravityDepsDir>

	<!-- Third Party -->
    <JavaRoot>$(JAVA_HOME)</JavaRoot>
    <PythonRoot>$(PYTHONHOME)</PythonRoot>
    <BoostRoot>$(BOOST_HOME)</BoostRoot>
	<LexCommand>$(LEX_CMD)</LexCommand>
	<YaccCommand>$(YACC_CMD)</YaccCommand>
    <ProtobufRoot>$(PROTOBUF_HOME)</ProtobufRoot>
	<ZMQRoot>$(ZMQ_HOME)</ZMQRoot>
    <PThreadsRoot>$(PTHREADS_HOME)</PThreadsRoot>
	<!--<ThirdPartyLibs>$(GRAVITY_THIRD_PARTY_LIBS)</ThirdPartyLibs>-->
	<ThirdPartyLibs>$(GravityRoot)\$(Platform)\$(Configuration)\deps\</ThirdPartyLibs>
    
  </PropertyGroup>
  <ItemDefinitionGroup />
  <ItemGroup>
    <BuildMacro Include="GravityRoot">
      <Value>$(GravityRoot)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="JavaRoot">
      <Value>$(JavaRoot)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="PythonRoot">
      <Value>$(PythonRoot)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="BinDir">
      <Value>$(BinDir)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="LibDir">
      <Value>$(LibDir)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="BoostRoot">
      <Value>$(BoostRoot)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="LexCommand">
      <Value>$(LexCommand)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="YaccCommand">
      <Value>$(YaccCommand)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="ProtobufRoot">
      <Value>$(ProtobufRoot)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="ZMQRoot">
      <Value>$(ZMQRoot)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="PThreadsRoot">
      <Value>$(PThreadsRoot)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="ThirdPartyLibs">
      <Value>$(ThirdPartyLibs)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="GravityIncludeDir">
      <Value>$(GravityIncludeDir)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="GravityDepsDir">
      <Value>$(GravityDepsDir)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>

	</ItemGroup>
</Project>
